{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true, // Enable project references
    "rootDir": "./src", // Define the source directory
    "outDir": "./dist", // Define the output directory
    "resolveJsonModule": true, // Allow importing JSON files
    "esModuleInterop": true, // Enable ES module interop
    "strict": true, // Ensure strict type checking
    "typeRoots": ["./node_modules/@types"], // Include types from node_modules
    "types": ["node"] // Add Node.js types
  },
  "include": ["src", "**/*.json"], // Include source files and JSON files
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist
}
